
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
}

<h4 style="color:red; text-align:center">@ViewBag.Thongbao</h4>
<center>
    <table>
        <h3 style="text-align:center">ĐĂNG NHẬP</h3>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr style="height:40px">
                <td>Tên đăng nhập:  </td>
                <td>
                    @Html.TextBox("TenDN")
                </td>
            </tr>
            <tr style="height:40px">
                <td align="right">Mật khẩu:  </td>
                <td>
                    @Html.Password("Matkhau")
                </td>
            </tr>
            @ViewData["Loi1"]
            @ViewData["Loi2"]
            <tr style="height:40px">
                <td></td>
                <td>
                    <input type="submit" value="Đăng nhập" />
                </td>
            </tr>
            <tr style="height:40px">
                <td></td>
                <td>
                    <a href="@Url.Action("Dangky","Nguoidung")"><input value="Đăng kí" type="button" /></a>
                </td>
            </tr>
        }
    </table>
</center>
